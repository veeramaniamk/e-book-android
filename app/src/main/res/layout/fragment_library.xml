<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userscreens.fragments.LibraryFragment">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/top_half_oval"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:elevation="10dp"
        android:text="My Library"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/savedTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:drawablePadding="13dp"
        android:gravity="center_vertical"
        android:text="Saved"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableEndCompat="@drawable/arrow_right"
        app:drawableStartCompat="@drawable/saved_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/finishedTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/finished"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/arrow_right"
        android:text="Finished"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/savedTV" />

    <TextView
        android:id="@+id/myBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/finished"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/arrow_right"
        android:text="My Books"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/finishedTV" />

</androidx.constraintlayout.widget.ConstraintLayout>